<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1b325f"
            android:hint="TEST"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_itemcode"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="65dp"
        android:hint="Item_Code"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_dialog_itemname"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="103dp"
        android:hint="Item_Name"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_dialog_lot"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="218dp"
        android:hint="Lot_Item"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_dialog_storage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="185dp"
        android:hint="Storage"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/tv_dialog_storage"
        android:text="Edit"
        android:layout_alignEnd="@+id/tv_dialog_itemcode" />


    <TextView
        android:id="@+id/tv_dialog_amount"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="248dp"
        android:hint="ยอดคงเหลือในระบบ"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_dialog_balance"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="297dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="313dp"
        android:hint="จำนวนสุทธิ"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_dialog_take"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="280dp"

        android:hint="ยอดที่ทำการเบิก"
        android:textColor="#000000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/ed_note"
        android:layout_width="340dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="281dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="164dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#1b325f">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="16dp"
            android:text="Cancel"
            android:textColor="#FF0200" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="16dp"
            android:text="Submit"
            android:textColor="#0014FF" />
    </LinearLayout>


</RelativeLayout>